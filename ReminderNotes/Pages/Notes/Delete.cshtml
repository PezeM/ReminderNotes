@page "{id:int}"
@model ReminderNotes.Pages.Notes.DeleteModel
@{
    ViewData["Title"] = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>

<div>
    <div class="form-group">
        <label asp-for="Note.Title" class="control-label"></label>
        <input asp-for="Note.Title" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Note.Content" class="control-label"></label>
        <textarea asp-for="Note.Content" class="form-control" rows="4"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="Note.ExpireTime" class="control-label"></label>
        <input asp-for="Note.ExpireTime" class="form-control" />
    </div>
</div>

<form method="post">
    <input type="hidden" asp-for="Note.NoteId" />
    <input type="submit" value="Delete" class="btn btn-primary" />
</form>
<br />

<a asp-page="./Notes">Back to list of notes</a>